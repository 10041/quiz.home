{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <div style = "margin :10px; margin-left: 0;"><a href = "/admin/quiz/new"><button class="btn btn-dark" align = "right">Create new quiz</button></a><br></div>
    <h2>List quiz</h2>
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
        <tr>
            <th width = "5%">ID</th>
            <th>Name</th>
            <th>Description</th>
            <th width = "10%">TimeStart</th>
            <th width = "10%">Status</th>
            <th width = "7%" data-orderable="false">Delete</th>
            <th width = "7%" data-orderable="false">Edit</th>
        </tr>
        </thead>
        {% for quiz  in quizs %}
            <tr>
                <td>{{ quiz.id }}</td>
                <td>{{ quiz.name }}</td>
                <td>{{ quiz.description }}</td>
                <td>{{ quiz.CreateData|date("H:m:s d/m/Y") }}</td>
                <td>{% if quiz.isActive == 1 %} Active {% else %} Not active {% endif %}</td>
                <td><a href = "/admin/quiz/edit/{{ quiz.id }}">Edit</a></td>
                <td>Delete</td>
            </tr>
        {% endfor %}
        <tfoot>
        <tr>
            <th width = "5%">ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>TimeStart</th>
            <th>Status</th>
            <th width = "10%" data-orderable="false">Delete</th>
            <th width = "10%" data-orderable="false">Edit</th>
        </tr>
        </tfoot>
    </table>
    <script>

        $(document).ready(function() {
            $('#example').DataTable(
                {
                    "lengthMenu": [[10, 25, 50], [10, 25, 50]]
                }
            );
        } );
    </script>
{% endblock %}
