{% extends "base.html.twig" %}

{% block body %}
    <h1>{{ quiz.name }}</h1>
    <h2>{{ question.text }}</h2>
    {% for option in options %}
        <div class="radio">
            <label><input type="radio" name="optradio" id={{ option['id'] }}> {{ option['text'] }}</label>
        </div>
    {% endfor %}
    <div>
        <p class="alert alert-danger" id="incorrect" style="display: none;">{% trans %}question.incorrect{% endtrans %}</p>
        <p class="alert alert-success" id="correct" style="display: none;">{% trans %}question.correct{% endtrans %}</p>
    </div>
    <div>
        <br>
        <button type="button" onclick="check(`{{ path("answerCheck", {'id':quiz.id}) }}`)" class="btn btn-default" id="resp">{% trans %}question.respond{% endtrans %}</button>
        <a class="btn btn-success" style="display: none;" id="next" href={{ path("quizGame", {'id':quiz.id}) }} >{% trans %}question.next{% endtrans %}</a>
    </div>
    <script type="text/javascript" language="javascript" src="/js/sendAnswer.js"></script>
{% endblock %}
